<view class="container">
  <view class="canvas-area">
    <canvas canvas-id="myCanvas" class="myCanvas" disable-scroll="{{false}}" bindtouchstart="touchstart" bindtouchmove="touchmove" bindtouchend="touchend"></canvas>
  </view>
  <view class="canvas-tool">
    <!-- 细笔 -->
    <view class="box box1" bindtap="penSelect" data-params="5"></view>
    <!-- 粗笔 -->
    <view class="box box2" bindtap="penSelect" data-params="15"></view>
    <!-- 颜色 -->
    <view class="box box3" bindtap="colorSelect" data-params="#cc0033"></view>
    <view class="box box4" bindtap="colorSelect" data-params="#ff9900"></view>
  </view>
</view>